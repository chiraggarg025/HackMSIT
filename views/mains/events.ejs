<% layout('layout')%>

<link rel="stylesheet" href="/css/events.css">

<div class="container">
    <div class="row">
        <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
            <ul class="event-list">

                <% for(var i=0;i<events.length;i++){%>
                <li class = "shadow">
                    <time datetime="2014-07-20 0000">
                        <span class="day"><%= new Date(events[i].date).getDate()%></span>
                        <span class="month"><%= month[new Date(events[i].date).getMonth()]%></span>
                        <span class="year"><%= new Date(events[i].date).getFullYear()%></span>
                    </time>
                    <div class="info">
                        <h2 class="title"><%= events[i].name%></h2>
                        <p class="desc"><%= events[i].location%></p>
                        <p class="desc"><%= events[i].time%></p>
                    </div>
                    <div class="social">
                        <ul>
                            <li class="facebook" style="width:33%;"><a href="<%= events[i].facebook%>"><span class="fa fa-facebook"></span></a></li>
                            <li class="twitter" style="width:34%;"><a href="<%= events[i].twitter%>"><span class="fa fa-twitter"></span></a></li>
                            <li class="google-plus" style="width:33%;"><a href="<%= events[i].website%>"><span class="fa fa-globe"></span></a></li>
                        </ul>
                    </div>
                </li>

                <%}%>

            </ul>
        </div>
    </div>
</div>
