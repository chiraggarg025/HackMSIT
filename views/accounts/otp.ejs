<% layout('layout') %>

<div class="container">
    <form action="/otp" method="post">
        <input type="hidden" name="name" id="modal-name" value="<%= user.name%>">
        <input type="hidden" name="email" id="modal-email" value="<%= user.email%>">
        <input type="hidden" name="password" id="modal-password" value="<%= user.password%>">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Verification</h4>
                </div>
                <div class="modal-body text-center">
                    <p>Check your email id for OTP.</p>
                </div>
                <div class="form-group text-center" style="margin: 0 25%">
                    <label for="otp">Enter OTP : </label>
                    <input class="form-control" name="otp" type="number" required>
                </div>
                <br>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>